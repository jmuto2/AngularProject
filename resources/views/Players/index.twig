{% extends 'templates/master.twig' %}
{% block content %}
    <style>
        #players_app {
            background-color: lightblue;
            border-radius: 25px;
            box-shadow: 1px 2px 2px #888888;
        }
        #players_app section {
            padding-bottom: 50px;
        }
        .label {
            float: left;
            padding: 20px;
            font-size: 30px;
            color: darkslategray;
        }
        #players_table tr:first-child th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
    <div id="players_app">
    <section>
        <div class="row text-center">
            <div class="col m12">
                <h2 class="label"><strong>Players</strong></h2>
                <table id="players_table" class="table table-striped">
                    <tfoot>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">First Name</th>
                        <th class="text-center">Last Name</th>
                        <th class="text-center"></th>
                    </tr>
                    {% for player in players %}
                        <tr>
                            <td width="15%" class="text-center">
                                {{ player.id }}
                            </td>
                            <td width="15%" class="text-center">
                                {{ player.first_name }}
                            </td>
                            <td width="15%" class="text-center">
                                {{ player.last_name }}
                            </td>
                            <td width="15%">
                                <button class="btn blue" href="#edit_modal" data-toggle="modal" id="{{ player.id }}">Edit</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tfoot>
                </table>
            </div>
        </div>
    </section>
    </div>
    <input type="text" ng-model="name">
    {% verbatim %}
    <div>Hello {{name}}</div>
    {% endverbatim %}
{% endblock %}